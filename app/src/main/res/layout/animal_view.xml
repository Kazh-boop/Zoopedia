<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="327dp"
            android:layout_height="187dp" tools:srcCompat="@drawable/annaconda" android:id="@+id/avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            tools:ignore="ImageContrastCheck"/>
    <TextView
            android:layout_width="276dp"
            android:layout_height="44dp" android:id="@+id/nom"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatar" android:layout_marginTop="72dp"
            app:layout_constraintHorizontal_bias="0.496"/>
    <TextView
            android:layout_width="275dp"
            android:textSize="30sp"
            android:layout_height="45dp" android:id="@+id/habitat"
            app:layout_constraintTop_toBottomOf="@+id/nom" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="48dp"
            app:layout_constraintHorizontal_bias="0.476"/>
    <TextView
            android:layout_width="279dp"
            android:textSize="30sp"
            android:layout_height="43dp" android:id="@+id/emplacement"
            app:layout_constraintTop_toBottomOf="@+id/habitat" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="52dp"
            app:layout_constraintHorizontal_bias="0.484"/>
    <ImageButton
            android:layout_width="103dp"
            android:layout_height="69dp" app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
            android:id="@+id/son_button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/emplacement"
            app:layout_constraintBottom_toTopOf="@+id/retour_button" app:layout_constraintVertical_bias="0.113"
            tools:ignore="SpeakableTextPresentCheck"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/retour_button"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
            tools:ignore="SpeakableTextPresentCheck" android:text="Retour"
    />
    <TextView
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content" android:id="@+id/name_indic"
            app:layout_constraintTop_toBottomOf="@+id/avatar"
            app:layout_constraintBottom_toTopOf="@+id/nom" app:layout_constraintVertical_bias="0.826"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.163"/>
    <TextView
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content" android:id="@+id/habitat_indic"
            app:layout_constraintTop_toBottomOf="@+id/nom"
            app:layout_constraintBottom_toTopOf="@+id/habitat" app:layout_constraintVertical_bias="0.75"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.163"/>
    <TextView
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content" android:id="@+id/emp_indic"
            app:layout_constraintTop_toBottomOf="@+id/habitat"
            app:layout_constraintBottom_toTopOf="@+id/emplacement" app:layout_constraintVertical_bias="0.781"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.163"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sound_i"
            app:layout_constraintTop_toBottomOf="@+id/emplacement"
            app:layout_constraintBottom_toTopOf="@+id/son_button" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.321"/>
</androidx.constraintlayout.widget.ConstraintLayout>