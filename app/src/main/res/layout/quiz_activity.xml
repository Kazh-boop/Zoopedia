<?xml version="1.0" encoding="utf-8"?>
<?import Question?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".quiz.QuizActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        <Button
                android:id="@+id/button_menu"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/current_question"
                android:backgroundTint="@color/red_back"
                android:text="Menu"/>
        <TextView
                android:id="@+id/current_question"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Question 0 sur 10"
                android:textSize="30sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutStatement"
            android:layout_width="0dp" android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintBottom_toTopOf="@id/layoutScoreNext">
        <TextView
                android:id="@+id/statement"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAlignment="center"
                android:text="Coucou"
                android:textSize="30sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutScoreNext"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layoutStatement"
            app:layout_constraintBottom_toTopOf="@id/layoutClause"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        <TextView
                android:id="@+id/textScore"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/button_next_question"
                android:text="Score : 0 / 10"
                android:textSize="20sp"/>
        <Button
                android:id="@+id/button_next_question"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/textScore"
                app:layout_constraintRight_toRightOf="parent"
                android:enabled="false"
                android:text="Question suivante"
                android:backgroundTint="@color/white"
                android:textColor="@color/grey_disable"/>
    </androidx.constraintlayout.widget.ConstraintLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutClause"
            android:layout_width="0dp" android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/layoutScoreNext"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <Button
                android:id="@+id/clause1"
                android:layout_width="0dp" android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/clause3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/clause2"
                android:background="@color/red_clause"
                android:text="1"/>

        <Button
                android:id="@+id/clause2"
                android:layout_width="0dp" android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/clause4"
                app:layout_constraintLeft_toRightOf="@id/clause1"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/blue_clause"
                android:text="2"/>


        <Button
                android:id="@+id/clause3"
                android:layout_width="0dp" android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/clause1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/clause4"
                android:background="@color/yellow_clause"
                android:text="3"/>
        <Button
                android:id="@+id/clause4"
                android:layout_width="0dp" android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/clause2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/clause3"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/green_clause"
                android:text="4"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>